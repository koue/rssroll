# rssroller name, will be printed on the top of the web page
name=rssroller

# URL on which it will be accessed
url=http://rssroller.example.net/cgi-bin/rssroll.cgi

# path to sqlite database where rss feeds are saved
dbpath=/srv/rss.db

# the owner's mail
owner=dont@blame.me

# default charset, used by cgi
ct_html=Content-Type: text/html; charset=utf-8

# path to the html files
htmldir=/usr/local/www/data/rssroll/html

# web theme
webtheme=flak

# how many feeds will be printed on the page
feeds=10

# default category
category=1
